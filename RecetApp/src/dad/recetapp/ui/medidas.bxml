<?xml version="1.0" encoding="UTF-8"?>
	
	<ui:MedidasPane orientation="vertical" styles="{fill:true}"
	xmlns:bxml="http://pivot.apache.org/bxml"
	xmlns:content="org.apache.pivot.wtk.content" xmlns:ui="dad.recetapp.ui"
	xmlns="org.apache.pivot.wtk">	
		<FlowPane>
			<Label text="Nombre:" styles="{horizontalAlignment:'center', verticalAlignment:'center'}" />
			<TextInput bxml:id="nombreText"></TextInput>
			<Label text="Abreviatura:" styles="{horizontalAlignment:'center', verticalAlignment:'center'}" />
			<TextInput bxml:id="abreviaturaText"></TextInput>
			<PushButton bxml:id="botonAnadir" buttonData="AÃ±adir" />
			<PushButton bxml:id="botonEliminar" buttonData="Eliminar" />
		</FlowPane>
		<Border>
			<ScrollPane horizontalScrollBarPolicy="FILL_TO_CAPACITY">
				<TableView bxml:id="tableViewMedidas" selectMode="MULTI">
					<columns>
						<TableView.Column name="nombre" width="200" headerData="Nombre" />
						<TableView.Column name="abreviatura" width="200" headerData="Abreviatura" />
					</columns>
					<rowEditor>
						<content:TableViewRowEditor editEffect="VERTICAL_SLIDE">
							<cellEditors>
								<nombre>
									<TextInput textKey="nombre" /> 
								</nombre>
								<abreviatura>
									<TextInput textKey="abreviatura" /> 
								</abreviatura>
							</cellEditors>
						</content:TableViewRowEditor>
					</rowEditor>					
				</TableView>				
				<columnHeader>
					<TableViewHeader tableView="$tableViewMedidas"/>
				</columnHeader>
			</ScrollPane>
		</Border>
	</ui:MedidasPane>